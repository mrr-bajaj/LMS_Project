@model IEnumerable<LMS_Project.Models.LendRequest>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Your Issued Books</h1>

<table class="table">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.LendId)</th>
        <th>Book Name</th>
        <th>@Html.DisplayNameFor(model => model.LendDate)</th>
        <th>Due Date</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.LendId)</td>
                <td>@Html.DisplayFor(modelItem => item.Book.BookTitle)</td>
                <td>@Html.DisplayFor(modelItem => item.LendDate)</td>
                <td>@Html.DisplayFor(modelItem => item.ReturnDate)</td>
                <td><form asp-action="ReturnBook" asp-controller="LendRequests" asp-route-lendId=@item.LendId>
                    <input type="submit" value="Return Book"/>
                </form></td>
            </tr>
        }
    </tbody>
</table>

